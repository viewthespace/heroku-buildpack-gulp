#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output
# set -x          # enable debugging

# Configure directories
build_dir=$1
cache_dir=$2
env_dir=$3

bp_dir=$(cd $(dirname $0); cd ..; pwd)

# Load some convenience functions like status(), echo(), and indent()
source $bp_dir/bin/common.sh

# Run subsequent node/npm commands from the build path
cd $build_dir

echo "HEROKU GULP BUILDPACK DEBUG DETAILS"
node --version
which node

echo "UPDATING PATH"
export PATH="$BUILD_DIR/.heroku/node/bin:$BUILD_DIR/.heroku/yarn/bin":$PATH

node --version
which node

# Check and run gulp
(
  if [ -f $build_dir/gulpfile.js ] || [ -f $build_dir/gulpfile.babel.js ]; then
    # get the env vars
    if [ -d "$env_dir" ]; then
      status "Exporting config vars to environment"
      export_env_dir $env_dir
    fi

    status "Found gulpfile, running 'gulp --production'"
    $build_dir/node_modules/.bin/gulp --production
  else
    status "No gulpfile found"
  fi
)
